---
import es from "@/i18n/es";
import en from "@/i18n/en";
import Layout from "@/layouts/Layout.astro";
import type { Translations } from "@/types/translations.type";

const lang = "en";
const translations = { en, es };
const t: Translations = translations[lang];
---

<Layout lang={lang} t={t} title="Redirigiendo...">
    <head>
      <meta http-equiv="refresh" content=`0;url=/en` />
      <script>
        window.location.replace("/en");
      </script>
    </head>
    <div class="min-h-screen flex items-center justify-center bg-[#151515]">
      <div class="text-center">
        <div class="animate-spin rounded-full h-10 w-10 border-4 border-t-[#f8d7ff] border-[#4d3651] mx-auto mb-4"></div>
        <h1 class="text-xl font-semibold text-white">Redirecting...</h1>
      </div>
    </div>
  </Layout>